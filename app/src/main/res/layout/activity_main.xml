<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/Img_WelcomeImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Btn_ToCamera"
        app:layout_constraintVertical_weight="6"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="50dp"
        android:src="@color/black"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/Btn_ToCamera"
        app:layout_constraintTop_toBottomOf="@id/Img_WelcomeImage"
        app:layout_constraintBottom_toTopOf="@id/Btn_ToGallery"
        app:layout_constraintVertical_weight="1"
        android:layout_marginHorizontal="70dp"
        android:layout_marginVertical="5dp"
        android:text="Take a new picture"
        android:onClick="OnClickMainMenu"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/Btn_ToGallery"
        app:layout_constraintTop_toBottomOf="@id/Btn_ToCamera"
        app:layout_constraintBottom_toTopOf="@id/Btn_ToList"
        app:layout_constraintVertical_weight="1"
        android:layout_marginHorizontal="70dp"
        android:layout_marginVertical="5dp"
        android:text="Select picture for Gallery"
        android:onClick="OnClickMainMenu"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/Btn_ToList"
        app:layout_constraintTop_toBottomOf="@id/Btn_ToGallery"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:text="Open Vietnamese Cuisine List"
        android:onClick="OnClickMainMenu"/>

</androidx.constraintlayout.widget.ConstraintLayout>