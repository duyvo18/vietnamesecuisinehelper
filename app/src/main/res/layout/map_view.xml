<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MapActivity">

    <fragment
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/frg_mapView"
        map:layout_constraintTop_toTopOf="parent"
        map:layout_constraintBottom_toTopOf="@id/btn_navigate"
        map:layout_constraintVertical_weight="9"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn_currentLoc"
        app:layout_constraintTop_toBottomOf="@id/frg_mapView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_navigate"
        app:layout_constraintVertical_weight="1"
        android:layout_marginVertical="7dp"
        android:layout_marginHorizontal="20dp" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/btn_navigate"
        app:layout_constraintTop_toBottomOf="@id/frg_mapView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_currentLoc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_weight="1"
        android:layout_marginVertical="7dp"
        android:layout_marginHorizontal="20dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>